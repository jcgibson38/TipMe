<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lower_elevation_gray"
    android:elevation="0dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/empty_detail_imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="4dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_attach_money_white_36dp"/>

        <TextView
            android:id="@+id/empty_detail_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No Tips Reported"
            android:textSize="18sp"
            android:textColor="#80FFFFFF"/>

    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/add_shift_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_input_add"
        android:tint="@android:color/white"
        android:layout_margin="16dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:clickable="true"
        app:elevation="4dp"
        app:borderWidth="0dp"
        app:backgroundTint="#FF4081"/>

</RelativeLayout>